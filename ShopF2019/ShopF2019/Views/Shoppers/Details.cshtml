@model ShopF2019.Models.Shopper

@{
    ViewData["Title"] = "Details";
}

<h1>Shopper Details</h1>
<p>
    <a asp-action="Create" asp-controller="Carts" asp-route-id="@Model.ShopperID">Create Cart</a> |
</p>

<div>
    <h4>Shopper</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Carts)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Cart</th>
                    <th>ShopperID</th>
                </tr>
                @foreach (var item in Model.Carts)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.CartID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ShopperID)
                        </td>
                        <td>
                            <a asp-action="Details" asp-controller="Carts" asp-route-id="@item.CartID">Orders</a> |
                        </td>
                    </tr>
                }
            </table>
        </dd>


    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ShopperID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
